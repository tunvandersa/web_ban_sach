@model IEnumerable<DoAnWEB.Models.Sach>

@{
    ViewBag.Title = "TimKiem";
    Layout = "~/Areas/User/Views/Shared/_LayoutUser.cshtml";

}

<div id="content-page" class="content-page">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <div class="iq-card iq-card-block iq-card-stretch iq-card-height">
                    <div class="iq-card-header d-flex justify-content-between align-items-center position-relative">
                        <div class="iq-header-title">
                            <h4 class="card-title mb-0">Gợi ý cho bạn</h4>
                        </div>
                    </div>
                    <div class="iq-card-body">
                        <div class="row">
                            @foreach (var sach in Model)
                            {
                                <div class="col-sm-6 col-md-4 col-lg-3">
                                    <div class="iq-card iq-card-block iq-card-stretch iq-card-height search-bookcontent">
                                        <div class="iq-card-body p-0">
                                            <div class="d-flex align-items-center">
                                                <div class="col-6 p-0 position-relative image-overlap-shadow">
                                                    <a href="javascript:void();"><img class="img-fluid rounded w-100" src="@sach.AnhBia" alt=""></a>
                                                    <div class="view-book">
                                                        <a href="@Url.Action("Sach","CTSach", new {id = sach.MaSach })" class="btn btn-sm btn-white">View Book</a>
                                                    </div>
                                                </div>
                                                <div class="col-9">
                                                    <div class="mb-2">
                                                        <h6 class="mb-1">@sach.TenSach</h6>
                                                        <p class="font-size-13 line-height mb-1">@sach.TacGia.TenTacGia</p>

                                                    </div>
                                                    <div class="price d-flex align-items-center">
                                                        <span class="pr-1 old-price">@($"{sach.GiaBan:N0} đ")</span>

                                                    </div>
                                                    <h6><b>@($"{sach.GiaKM:N0} đ")</b></h6>
                                                    <div class="iq-product-action">
                                                        <a href="@Url.Action("ThemItem", "GioHang", new {masach = sach.MaSach, soluong = 1 })"><i class="ri-shopping-cart-2-fill text-primary"></i></a>
                                                        <a href="javascript:void();" class="ml-2"><i class="ri-heart-fill text-danger"></i></a>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>


        </div>
    </div>
</div>



