@model IEnumerable<DoAnWEB.Models.Sach>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin2.cshtml";
}
<div>
    <hr />
    <h3>Trang chủ quản lý sách </h3>
    <hr />
    @if (TempData["Message"] != null)
    {
        <div class="alert alert-success">
            @TempData["Message"]
        </div>}
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">
            @TempData["Error"]
        </div>}
 
       

<div class="table-responsive">

    <div>
        <a href="@Url.Action("Create", "Sach")" class="btn btn-sm btn-success">Thêm mới</a>
    </div>
    <hr />
    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
        <thead>
            <tr>
                <th>Tên sách</th>
                <th>Ảnh bìa </th>
                <th>Tác giả</th>
                <th>Thể loại</th>
                <th>Giá</th>
                <th>Phần trăm KM</th>
                <th>Nhà xuất bản</th>
                <th>Số lượng</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.TenSach)
                    </td>
                    <td>
                        <img src="@item.AnhBia" style=" height: 115px; width: 100px; object-fit: cover; display: block; margin: auto" />
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TacGia.TenTacGia)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TheLoai.TenTL)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.GiaBan)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PhanTramKM)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NhaXuatBan.TenNXB)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Soluongton)
                    </td>
                    <td class="center">
                        @Html.ActionLink("Sửa", "Edit",
                                        routeValues: new { id = item.MaSach },
                                        htmlAttributes: new { @class = "btn btn-primary" })

                        @Html.ActionLink("Xóa", "Delete",
                                        routeValues: new { id = item.MaSach },
                                        htmlAttributes: new { @class = "btn btn-danger", onclick = "return confirmDelete(); " })
                    </td>

                </tr>
            }


        </tbody>
    </table>
</div>
</div>
<p>
    @Html.ActionLink("Back to List", "Index")
</p>
<script>function confirmDelete() {
    return confirm('Bạn chắc chắn muốn xóa sản phẩm này');
}</script>