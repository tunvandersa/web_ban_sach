@model IEnumerable<DoAnWEB.Models.TacGia>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin2.cshtml";
}
<hr />
@if (TempData["Message"] != null)
{
    <div class="alert alert-success">
        @TempData["Message"]
    </div>}

<div>
    <hr />
    <h3>Tác Giả</h3>
    <hr />
    <div class="table-responsive">
        <div>
            <a href="@Url.Action("Create", "TacGia")" class="btn btn-sm btn-success">Thêm mới</a>
        </div>
        <hr />
        <table class="table table-striped table-bordered table-hover" id="dataTables-example">
            <thead>
                <tr>
                    <th>Tên Tác giả</th>
                    <th>Tiểu sử </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.TenTacGia)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TieuSu)
                        </td>
                        <td class="center">
                            @Html.ActionLink("Sửa", "Edit",
                                            routeValues: new { id = item.MaTacGia },
                                            htmlAttributes: new { @class = "btn btn-primary" })

                            @Html.ActionLink("Xóa", "Delete",
                                            routeValues: new { id = item.MaTacGia },
                                            htmlAttributes: new { @class = "btn btn-danger", onclick = "return confirmDelete(); " })
                        </td>

                    </tr>
                }

            </tbody>
        </table>
    </div>
</div>

<script>
    function confirmDelete() {
        return confirm('Bạn chắc chắn muốn xóa sản phẩm này');
    }</script>